<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"

    android:background="@color/white"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context="com.example.rishabhkhanna.code_n_counter.MainActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="150sp"
        android:layout_height="150sp"
        android:layout_marginTop="75sp"
        android:layout_gravity="center"
        android:src="@drawable/images"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="DarkHorse Education"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="35sp"
        android:fontFamily="sans-serif"
        android:typeface="serif"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20sp"
        android:layout_marginBottom="20sp"
        android:padding="10sp"
        android:layout_height="wrap_content">

        <Button
            android:layout_weight="1"
            android:background="@drawable/button_style1"
            android:textColor="@drawable/button_style1_text"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Teacher Portal"
            android:id="@+id/teacherSignup"
            android:layout_marginRight="10sp"
            />

        <Button
            android:textSize="15sp"
            android:textColor="@drawable/button_style2_text"
            android:background="@drawable/button_style2"
            android:layout_weight="1"
            android:layout_marginLeft="10sp"
            android:layout_below="@id/teacherSignup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="student Signup"
            android:id="@+id/student Portal"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20sp"
        android:orientation="horizontal"
        android:padding="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:text="Powered by Boosters"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="bottom"
            android:textColor="@color/black"

            />
        <ImageView
            android:layout_width="75sp"
            android:layout_height="75sp"
            android:layout_marginLeft="10sp"
            android:src="@drawable/blue"
            android:id="@+id/image_1"
            />

        <ImageView
            android:layout_width="45sp"
            android:layout_height="45sp"
            android:layout_marginLeft="5sp"
            android:layout_gravity="bottom"
            android:src="@drawable/red"
            android:id="@+id/image_2"
            />



    </LinearLayout>


</LinearLayout>
