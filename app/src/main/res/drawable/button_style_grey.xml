<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item
        android:state_pressed="true"
        >

        <shape android:shape="rectangle"  >
            <corners android:radius="10dip" />
            <stroke android:width="2dip" android:color="#c9c3c3" />
            <gradient android:angle="-90" android:startColor="#484747" android:endColor="#484747"  />
        </shape>
    </item>
    <item
        android:state_focused="true"
        >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#ffffff" />
            <gradient android:angle="-90" android:startColor="#ff6666" android:endColor="#ff6666"  />
        </shape>
    </item>
    <item
        >

        <shape android:shape="rectangle"  >
            <corners android:radius="10dip" />
            <stroke android:width="2dip"  android:color="#484747"/>
            <gradient android:angle="-90" android:startColor="#c9c3c3" android:endColor="#c9c3c3" />
        </shape>
    </item>

</selector>